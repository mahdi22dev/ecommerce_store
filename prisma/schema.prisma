
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  clerkid       String   @unique
  name          String
  email         String   @unique
  createdAt     DateTime? @default(now())
}

model Address {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  address       String
  city          String
  town          String
  post          String
}